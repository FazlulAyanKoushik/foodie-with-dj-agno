# Django Environment
# Options: local, dev, prod
DJANGO_ENV=local

# Secret Key (Change this in production!)
# Generate a new secret key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY="django-insecure-@dl%zy=z*(by4d_h$8$70%avl1q!sq%xl9=le#*t*(86#w(wcn"

# Database Configuration
# Options: sqlite, postgres
DATABASE_TYPE=sqlite

# PostgreSQL Database Settings (if DATABASE_TYPE=postgres)
DB_NAME=postgres
DB_USER=postgres
DB_PASSWORD=postgres
#DB_HOST=localhost
DB_HOST="host.docker.internal"
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Allowed Hosts (comma-separated, no spaces)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# CORS Allowed Origins (comma-separated, no spaces)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# SSL Settings (for production)
# Set to True in production when using HTTPS
SECURE_SSL_REDIRECT=False

# JWT Token Settings
JWT_ACCESS_TOKEN_LIFETIME_MINUTES=60
JWT_REFRESH_TOKEN_LIFETIME_DAYS=7
JWT_ROTATE_REFRESH_TOKENS=True
JWT_BLACKLIST_AFTER_ROTATION=True
JWT_ALGORITHM=HS256

# DRF Settings
DRF_PAGE_SIZE=20

# Internationalization
LANGUAGE_CODE=en-us
TIME_ZONE=UTC

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# ChromaDB Configuration
# Path for local ChromaDB storage
CHROMA_DB_PATH=chroma_data
# Optional: Remote ChromaDB settings for production / Chroma Cloud
# CHROMA_DB_HOST=api.trychroma.com
# CHROMA_DB_PORT=443
# CHROMA_TENANT=default
# CHROMA_DATABASE=default
# CHROMA_API_KEY=your-chroma-api-key
# CHROMA_SSL=True

